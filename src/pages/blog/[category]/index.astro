---
import Layout from "../../../layouts/Layout.astro";
import { sanityFetch, queries } from "@/lib/sanity";
import { safeAsync } from "@/utils/errorHandling";
import type {
    BlogCategory,
    BlogPostPreview,
    WeeklyLogPreview,
} from "@/types/sanity";

// Disable prerendering/ISR for protected categories (auth check required)
export const prerender = false;

// Get category slug from params
const { category } = Astro.params;

// Fetch category data
const categoryData = await safeAsync(
    () =>
        sanityFetch<BlogCategory | null>(queries.blogCategoryBySlugPublic, {
            slug: category,
        }),
    null,
);

// If category doesn't exist, return 404
if (!categoryData) {
    return Astro.redirect("/404");
}

// Note: Authentication is now handled by middleware (src/middleware.ts)
// If user reaches this page, they're already authenticated (if category is protected)

// Fetch content for this category (both posts and weekly logs)
interface AllContent {
    posts: BlogPostPreview[];
    weeklyLogs: WeeklyLogPreview[];
}

const content = await safeAsync(
    () =>
        sanityFetch<AllContent>(queries.allContentByCategory, {
            categorySlug: category,
        }),
    { posts: [], weeklyLogs: [] },
);

const { posts, weeklyLogs } = content;
const hasContent = posts.length > 0 || weeklyLogs.length > 0;

// Format date helper
function formatDate(dateString: string): string {
    return new Date(dateString).toLocaleDateString("fr-FR", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
}

// Get image URL from Sanity
function getImageUrl(coverImage: any): string | null {
    if (!coverImage?.asset?._ref) return null;
    return `https://cdn.sanity.io/images/9bdbnjzy/production/${coverImage.asset._ref.replace("image-", "").replace("-jpg", ".jpg").replace("-png", ".png").replace("-webp", ".webp")}`;
}

// SEO data
const seoData = {
    title: `${categoryData.title} - Blog - William Mesiti`,
    description:
        categoryData.description ||
        `Articles de la catégorie ${categoryData.title}`,
    type: "website" as const,
};
---

<Layout {...seoData}>
    <div class="w-full lg:w-9/10 mx-auto p-4">
        <!-- Back Navigation -->
        <div class="mb-6">
            <a
                href="/blog"
                class="inline-flex items-center gap-2 px-4 py-2 bg-mochasurface hover:bg-mochasurfacelight border border-mochaborder rounded-lg text-mochawhite transition-colors"
            >
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M19 12H5M12 19L5 12L12 5"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </svg>
                Retour au blog
            </a>
        </div>

        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
                <h1 class="text-3xl md:text-4xl font-bold text-mochawhite">
                    {categoryData.title}
                </h1>
                {
                    categoryData.isProtected && (
                        <span class="flex items-center gap-1 px-2 py-1 bg-green-500/20 text-green-400 border border-green-500/30 rounded-md text-xs">
                            <svg
                                width="12"
                                height="12"
                                viewBox="0 0 24 24"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M20 6L9 17L4 12"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                />
                            </svg>
                            Authentifié
                        </span>
                    )
                }
            </div>
            {
                categoryData.description && (
                    <p class="text-mochawhite/70 text-lg">
                        {categoryData.description}
                    </p>
                )
            }
        </div>

        {
            hasContent ? (
                <>
                    {/* Weekly Logs Section */}
                    {weeklyLogs.length > 0 && (
                        <section class="mb-10">
                            <h2 class="text-xl font-bold text-mochawhite mb-4 flex items-center gap-2">
                                <span class="w-6 h-6 bg-blue-500/20 text-blue-400 rounded flex items-center justify-center">
                                    <svg
                                        width="14"
                                        height="14"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <rect
                                            x="3"
                                            y="4"
                                            width="18"
                                            height="18"
                                            rx="2"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        />
                                        <line
                                            x1="3"
                                            y1="10"
                                            x2="21"
                                            y2="10"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        />
                                        <line
                                            x1="8"
                                            y1="2"
                                            x2="8"
                                            y2="6"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                        />
                                        <line
                                            x1="16"
                                            y1="2"
                                            x2="16"
                                            y2="6"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                        />
                                    </svg>
                                </span>
                                Journaux hebdomadaires
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                {weeklyLogs.map((log) => (
                                    <a
                                        href={`/blog/${category}/log/${log.slug.current}`}
                                        class="group block p-4 bg-mochasurface border border-mochaborder rounded-xl hover:border-mochawhite/30 hover:bg-mochasurfacelight transition-all duration-300"
                                    >
                                        <div class="flex items-center gap-2 mb-2">
                                            <span class="px-2 py-1 bg-blue-500/20 text-blue-400 border border-blue-500/30 rounded text-xs font-medium">
                                                Semaine {log.weekNumber}
                                            </span>
                                            <span class="text-mochawhite/50 text-xs">
                                                {formatDate(log.publishedAt)}
                                            </span>
                                        </div>
                                        <h3 class="text-lg font-semibold text-mochawhite group-hover:text-white transition-colors">
                                            {log.title}
                                        </h3>
                                    </a>
                                ))}
                            </div>
                        </section>
                    )}

                    {/* Blog Posts Section */}
                    {posts.length > 0 && (
                        <section>
                            {weeklyLogs.length > 0 && (
                                <h2 class="text-xl font-bold text-mochawhite mb-4 flex items-center gap-2">
                                    <span class="w-6 h-6 bg-purple-500/20 text-purple-400 rounded flex items-center justify-center">
                                        <svg
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                            <polyline
                                                points="14,2 14,8 20,8"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                            <line
                                                x1="16"
                                                y1="13"
                                                x2="8"
                                                y2="13"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            />
                                            <line
                                                x1="16"
                                                y1="17"
                                                x2="8"
                                                y2="17"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            />
                                        </svg>
                                    </span>
                                    Articles
                                </h2>
                            )}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                {posts.map((post) => {
                                    const imageUrl = getImageUrl(
                                        post.coverImage,
                                    );
                                    return (
                                        <a
                                            href={`/blog/${category}/${post.slug.current}`}
                                            class="group block bg-mochasurface border border-mochaborder rounded-2xl overflow-hidden hover:border-mochawhite/30 hover:bg-mochasurfacelight transition-all duration-300"
                                        >
                                            {imageUrl && (
                                                <div class="aspect-video overflow-hidden">
                                                    <img
                                                        src={imageUrl}
                                                        alt={post.title}
                                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                                    />
                                                </div>
                                            )}

                                            <div class="p-6">
                                                <div class="flex items-center gap-2 mb-3">
                                                    {post.featured && (
                                                        <span class="px-2 py-1 bg-purple-500/20 text-purple-400 border border-purple-500/30 rounded-md text-xs">
                                                            En vedette
                                                        </span>
                                                    )}
                                                    <span class="text-mochawhite/50 text-sm">
                                                        {formatDate(
                                                            post.publishedAt,
                                                        )}
                                                    </span>
                                                </div>

                                                <h2 class="text-xl font-semibold text-mochawhite group-hover:text-white transition-colors mb-3">
                                                    {post.title}
                                                </h2>

                                                <p class="text-mochawhite/60 text-sm line-clamp-3">
                                                    {post.excerpt}
                                                </p>

                                                <div class="mt-4 flex items-center text-mochawhite/50 group-hover:text-mochawhite transition-colors">
                                                    <span class="text-sm">
                                                        Lire l'article
                                                    </span>
                                                    <svg
                                                        width="16"
                                                        height="16"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="ml-2"
                                                    >
                                                        <path
                                                            d="M5 12H19M12 5L19 12L12 19"
                                                            stroke="currentColor"
                                                            stroke-width="2"
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                        />
                                                    </svg>
                                                </div>
                                            </div>
                                        </a>
                                    );
                                })}
                            </div>
                        </section>
                    )}
                </>
            ) : (
                <div class="text-center py-12">
                    <p class="text-mochawhite/60 text-lg">
                        Aucun contenu dans cette catégorie pour le moment.
                    </p>
                </div>
            )
        }
    </div>
</Layout>
