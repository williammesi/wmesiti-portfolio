---
import About from '@/components/About.astro';
import Layout from '../layouts/Layout.astro';
import Experiences from '@/components/Experiences.astro';
import SkillsTabs from '@/components/SkillsTabs.astro';
import Projects from '@/components/Projects.astro';

// SEO data for homepage
const seoData = {
  title: "William Mesiti - Développeur Full Stack",
  description: "Portfolio de William Mesiti - Développeur Full Stack passionné par les technologies modernes. Découvrez mes projets, compétences et expériences professionnelles.",
  image: "/og-home.jpg", // Add this image to public folder
  type: "website" as const,
};
---

<Layout {...seoData}>
	<div class="w-full lg:w-9/10 flex flex-col gap-8 mx-auto p-4">
		<About id="about" />
		<SkillsTabs id="skills" />
		<Projects id="projects" />
		<Experiences id="experience" />
	</div>
</Layout>
