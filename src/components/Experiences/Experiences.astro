---
import { Image } from "astro:assets";
import benevaLogo from "@/assets/logo_beneva.webp";
import mcdoLogo from "@/assets/logo_mcdo.webp";
import { Button } from '@/components/ui/button'
import { Icon } from 'astro-icon/components'
import SkillsTabs from "./SkillsTabs.astro";
const { id } = Astro.props;
---

<div id={id} class="flex flex-col items-center bg-mochasurface border border-mochaborder rounded-4xl p-8 gap-8">
   <!-- Header Section -->
   <div class="text-center">
      <h2 class="text-xl md:text-2xl font-bold text-mochawhite mb-2">Expériences de travail</h2>
      <div class="w-16 h-0.5 bg-indigo-400 mx-auto"></div>
   </div>

   <!-- Work Experience Timeline -->
   <div class="w-full max-w-4xl">
      <div class="relative">
         <!-- Timeline Line -->
         <div class="hidden md:block absolute left-6 top-0 bottom-0 w-0.5 bg-mochaborder"></div>
         
         <!-- Experience Items -->
         <div class="space-y-12">
            <!-- Beneva Experience -->
            <div class="relative pl-0 md:pl-16 group">
               <!-- Timeline Dot -->
               <div class="hidden md:block absolute left-5 top-4 w-3 h-3 bg-indigo-400 rounded-full border-2 border-mochasurface"></div>
               
               <!-- Experience Card -->
               <div class="bg-mochablack border border-mochaborder rounded-xl p-6 hover:border-indigo-400/50 transition-colors duration-200">
                  <div class="flex flex-col lg:flex-row gap-6 items-start">
                     <!-- Company Logo -->
                     <div class="flex-shrink-0">
                        <Image class="rounded-lg" src={benevaLogo} alt="Beneva Logo" width={100} height={70} />
                     </div>
                     
                     <!-- Content -->
                     <div class="flex-1">
                        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-3">
                           <div>
                              <h3 class="text-xl font-semibold text-indigo-300 mb-1">
                                 Agent de service à la clientèle
                              </h3>
                              <p class="text-mochawhite font-medium">Beneva</p>
                           </div>
                           <div class="flex flex-col lg:items-end mt-2 lg:mt-0">
                              <span class="text-sm text-mochawhite/70">Mai 2023 - Aujourd'hui</span>
                              <span class="text-xs text-green-400 mt-1">En cours</span>
                           </div>
                        </div>

                        <!-- Skills -->
                        <div class="flex flex-wrap gap-2 mb-4">
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Teams</span>
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Jira</span>
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Confluence</span>
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Citrix</span>
                        </div>

                        <!-- Responsibilities -->
                        <div class="space-y-2 text-mochawhite/90">
                           <p>• Utilisation quotidienne d'outils collaboratifs et de gestion de projets</p>
                           <p>• Développement de compétences en communication et résolution de problèmes</p>
                           <p>• Relation directe avec les clients pour fournir des solutions adaptées</p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>

            <!-- McDonald's Experience -->
            <div class="relative pl-0 md:pl-16 group">
               <!-- Timeline Dot -->
               <div class="hidden md:block absolute left-5 top-4 w-3 h-3 bg-mochawhite/60 rounded-full border-2 border-mochasurface"></div>
               
               <!-- Experience Card -->
               <div class="bg-mochablack border border-mochaborder rounded-xl p-6 hover:border-mochawhite/30 transition-colors duration-200">
                  <div class="flex flex-col lg:flex-row gap-6 items-start">
                     <!-- Company Logo -->
                     <div class="flex-shrink-0">
                        <Image class="rounded-lg" src={mcdoLogo} alt="McDonald's Logo" width={100} height={70} />
                     </div>
                     
                     <!-- Content -->
                     <div class="flex-1">
                        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-3">
                           <div>
                              <h3 class="text-xl font-semibold text-mochawhite mb-1">
                                 Chef de quart
                              </h3>
                              <p class="text-mochawhite font-medium">McDonald's</p>
                           </div>
                           <div class="flex flex-col lg:items-end mt-2 lg:mt-0">
                              <span class="text-sm text-mochawhite/70">2021 - Mai 2023</span>
                              <span class="text-xs text-mochawhite/50 mt-1">2 ans</span>
                           </div>
                        </div>

                        <!-- Skills -->
                        <div class="flex flex-wrap gap-2 mb-4">
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Leadership</span>
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Gestion d'équipe</span>
                           <span class="px-3 py-1 bg-mochasurface border border-mochaborder rounded-md text-mochawhite text-sm">Systèmes informatiques</span>
                        </div>

                        <!-- Responsibilities -->
                        <div class="space-y-2 text-mochawhite/90">
                           <p>• Planification des horaires et gestion d'une équipe d'environ 10 employés</p>
                           <p>• Utilisation de systèmes informatiques pour la gestion des équipements et inventaire</p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>

   <!-- Education Note -->
   <div class="w-full max-w-4xl">
      <div class="bg-mochablack border border-mochaborder rounded-xl p-6 text-center">
         <Icon name="mdi:school" class="w-8 h-8 text-indigo-400 mx-auto mb-3" />
         <h3 class="text-lg font-semibold text-mochawhite mb-2">Formation</h3>
         <p class="text-mochawhite/70">DEC technique en informatique - En cours</p>
      </div>
   </div>
</div>