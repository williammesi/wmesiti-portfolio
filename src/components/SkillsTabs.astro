---
const { id } = Astro.props;
import Image from "astro/components/Image.astro";
import tailwind_icon from "../assets/tailwind_icon.png";
import rest from "../assets/rest_icon.png";
import teams from "../assets/teams_icon.png";

---

<div id={id} class="skills-tabs flex flex-col lg:grid lg:grid-cols-5 gap-8">
    <!-- Enhanced Tab Navigation -->
    <div class="tabs-header flex flex-col lg:col-span-1 gap-3">
        <div>
            <h2 class="text-xl md:text-2xl font-bold text-mochawhite mb-2 text-center ">Compétences</h2>
            <div class="w-16 h-0.5 bg-indigo-400 mx-auto"></div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-1 gap-3 my-auto lg:my-0">
        <button class="tab-button active group relative px-6 py-4 text-mochawhite bg-indigo-500 hover:bg-indigo-600 hover:scale-105 rounded-xl border border-mochaborder transition-all duration-300 text-left shadow-lg" data-tab="frontend">
            <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-white rounded-full"></div>
                <span class="font-medium">Frontend</span>
            </div>
        </button>
        <button class="tab-button group relative px-6 py-4 text-mochawhite bg-mochasurface backdrop-blur-sm rounded-xl border border-mochaborder hover:bg-mochasurfacelight hover:scale-105 transition-all duration-300 text-left" data-tab="backend">
            <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-mochawhite/60 rounded-full"></div>
                <span class="font-medium">Backend</span>
            </div>
        </button>
        <button class="tab-button group relative px-6 py-4 text-mochawhite bg-mochasurface backdrop-blur-sm rounded-xl border border-mochaborder hover:bg-mochasurfacelight hover:scale-105 transition-all duration-300 text-left" data-tab="devops">
            <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-mochawhite/60 rounded-full"></div>
                <span class="font-medium">DevOps</span>
            </div>
        </button>
        <button class="tab-button group relative px-6 py-4 text-mochawhite bg-mochasurface backdrop-blur-sm rounded-xl border border-mochaborder hover:bg-mochasurfacelight hover:scale-105 transition-all duration-300 text-left" data-tab="other">
            <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-mochawhite/60 rounded-full"></div>
                <span class="font-medium">Outils</span>
            </div>
        </button>
        </div>
    </div>

    <!-- Enhanced Tab Content -->
    <div class="tabs-body lg:col-span-4 bg-mochasurface backdrop-blur-sm rounded-2xl border border-mochaborder p-8 min-h-[400px] flex-1">
        <div class="tab-panel active fade-in" data-panel="frontend">
            <div class="mb-6">
                <h4 class="text-2xl font-bold text-mochawhite mb-2">Développement Frontend</h4>
                <p class="text-mochawhite/70 text-lg">Création d'interfaces utilisateur modernes et réactives</p>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <div class="tech-card group relative bg-gradient-to-br from-mochasurface to-mochasurfacelight hover:from-orange-600/20 hover:to-red-600/20 border border-mochaborder rounded-2xl p-6 transition-all duration-300 cursor-pointer hover:scale-105 hover:shadow-2xl">
                    <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg" alt="HTML5" class="w-12 h-12 mx-auto mb-3" />
                    <h5 class="text-center text-mochawhite font-medium">HTML5</h5>
